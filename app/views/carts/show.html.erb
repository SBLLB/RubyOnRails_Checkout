    <% else %>
      <% @cart.line_items.each do |line_item| %>  
        <li> <%= line_item.product.product_name %>, Quantity: <%= line_item.quantity %>, Unit Price:  <%=number_to_currency(line_item.unit_price, unit: :Â£) %>

